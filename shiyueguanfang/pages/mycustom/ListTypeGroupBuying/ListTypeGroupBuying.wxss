/* pages/mycustom/ListTypeCroupBuying/ListTypeCroupBuying.wxss */

.all-item-bg{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.item-bg{
  display: flex;
  position: relative;
  width: 100%;
  height: 110px;
  margin-top: 10px;
  align-items: center;
  background: white;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 5px;
}


.image{
  width: 100px;
  height: 100px;
  flex-shrink:0;
}

.productInfo{
  height: 100%;
  margin-left: 5px;
  position: relative;
}

.productName{
  height: 44px;
  font-size: 30rpx;
  color:#2c2c2c;
  font-weight: bolder;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 5px;
  padding-right: 5px;
}
.marketPrice{
  display: block;
  position: absolute;
  bottom: 30px;
  width: 160px;
  height: 20px;
  line-height: 20px;
  font-size: 24rpx;
  color: #999999;
}
.groupPrice{
  color:#ed3a3b;
  position: absolute;
  bottom: 0px;
  height: 28px;
  line-height: 30px;
  font-size: 30rpx;
  text-align: left bottom;
}
.groupbuying-info{
  position: absolute;
  top:66px;
  right: 10px;
  width: 260rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding-left: 10px;
  padding-right: 10px;
  text-align: left center;
  background: linear-gradient(to right,#f67e81 ,#ed4c50 );
  border-radius: 15px;
  color: white
}