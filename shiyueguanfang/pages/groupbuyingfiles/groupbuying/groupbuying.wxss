/* pages/groupbuyingfiles/groupbuying/groupbuying.wxss */
page{
  width: 100%;
  height: 100%;
  background:rgb(243, 240, 240);
}
.banner{
  width: 100%;
  height: 100px;
  
}
.slide-image{
  width: 100%;

}
.groupbuying-content{
  width: 100%;
  height: 100%;
  padding: 10px;
  box-sizing: border-box;
}
.groupbuying-title{
  width: auto;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  
  /* margin-right: 10px;
  margin-left: 10px; */
  border-radius: 3px;
}

.left{
  display: flex;
  align-items: center;  
}
.right{
  display: flex;
  align-items: center;
}
.title-title{
  font-size: 38rpx;
  color: #ed3a3b;
  padding: 10px;
}
.title-time{
  color: #999999;
  font-size: 26rpx;
  padding-right: 10px;
}
.time-item{
  color:white;
  background: black;
  font-size: 26rpx;
  width: 20px;
  height: 20px;
  line-height: 20px;
  border-radius: 6px;
  text-align: center;
  flex-shrink:0;
}
.point{
  padding-left: 2px;
  padding-right: 2px;
  color: black;
}
.next-text{
   color: #999999;
   font-size: 30rpx;
   height: 35px;
   line-height: 35px;
}
.next-icon{
  width: 35px;
  height: 35px;
}


