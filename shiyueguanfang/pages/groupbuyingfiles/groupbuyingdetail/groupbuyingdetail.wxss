/* pages/groupbuyingfiles/groupbuyingdetail/groupbuyingdetail.wxss */

page {
  width: 100%;
  height: 100%;
  background: rgb(243, 240, 240);
  box-sizing: border-box;
}

.gray-color{
  color: #2c2c2c;
}
.gainsboro-color{
  color:  #999999;
}
.custom-red-color{ 
  color: #ed4c50;
}
.padding-left-10{
  padding-left: 10px;
}

.all-content-bg{
  display: block;
  width: 100%;
  padding-bottom: 44px;
}

.title-image-bg {
  position: relative;
}

.banner {
  width: 100%;
  height: 100px;
}

.slide-image {
  width: 100%;
}

.current-page {
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 20px;
  position: absolute;
  bottom: 10px;
  right: 10px;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 24rpx;
}

.pin-bg {
  display: flex;
  width: 100%;
  height: 60px;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #ed4c50, #f67e81);
}

.pin-left {
  display: flex;
  align-items: center;
  justify-content: start;
}

.pin-icon {
  width: 50px;
  height: 50px;
  border-right-width: 1px;
  border-right-color: white;
  border-right-style: solid;
}

.price-bg {
  padding: 5px;
  height: 50px;
  box-sizing: border-box;
}

.mk-price {
  height: 15px;
  line-height: 15px;
  font-size: 20rpx;
  color: gainsboro;
}

.pin-price {
  font-size: 32rpx;
  height: 25px;
  line-height: 25px;
  color: white;
}

.pin-right {
  padding-right: 10px;
  box-sizing: border-box;
}

.coupon-time-msg {
  height: 30px;
  font-size: 24rpx;
  color: white;
  text-align: bottom;
}

.count-down-bg {
  height: 30px;
}

.time {
  margin: 0px;
  vertical-align: text-top;
  display: inline-block;
  font-size: 24rpx;
  color: #ed3a3b;
  height: 18px;
  width: 26px;
  text-align: center;
  border-radius: 5px;
  background: white;
}

.point {
  display: inline-block;
  height: 18px;
  line-height: 18px;
  vertical-align: text-top;
  text-align: center;
  font-size: 26rpx;
  color: white;
  padding-left: 2px;
  padding-right: 2px;
}

.product-name-bg {
  justify-items: center;
  width: 100%;
  /* height: 80px; */
  background: white;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 10px;
}

.product-coupon {
  float: left;
  flex-shrink: 0;
  font-size: 20rpx;
  height: 18px;
  text-align: center;
  line-height: 18px;
  border-radius: 3px;
  background: white;
  border-color: #ed3a3b;
  border-style: solid;
  border-width: 1px;
  color: #ed3a3b;
  margin-right: 10px;
  margin-top: 3px;
  box-sizing: border-box;
}

.product-name {
  font-size: 30rpx;
  color: #2c2c2c;
  line-height: 25px;
}

.spec-bg {
  width: 100%;
  background:white;
}

.spec-title-bg {
  width: 100%;
  height: 40px;
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
  align-items: center;
  padding-left: 10px;
  /* margin-left: 10px; */
  border-bottom-width: 1px;
  border-bottom-color: rgb(243, 240, 240);
  border-bottom-style: solid;
  box-sizing: border-box; 
}

.spec-choice-info {
  height: 40px;
  display: flex;
}

.spec-more-icon {
  width: 30px;
  height: 30px;
  margin-right: 0px;
  box-sizing: border-box;
}

.sepc {
  height: 50px; 
  line-height: 40px;
}

.spec-title {
  color: #999999;
  width: 50px;
  padding-right: 10px;
  box-sizing: border-box;
}

.spec-content-bg {
  width: 100%;
  height: 40px;
  justify-items: center;
  background: white;
}

/* 处理弹出规格尺码选择逻辑开始 */

/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  height: 410px;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0px;
  left: 0px;
  z-index: 2000;
}

.spec-shadow-bg {
  width: 100%;
  height: 400px;
  background: #fff;
  margin-top: 10px;
}

/* 头部信息背景 */

.spec-show-title-bg {
  display: flex;
  width: 100%;
  height: 80px;
  justify-content: flex-start;
  /* background: blue; */
  padding: 0px 10px 0px 10px;
  border-bottom-width: 1px;
  border-bottom-color: gainsboro;
  border-bottom-style: solid;
  box-sizing: border-box;
}

.spec-show-image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
  margin-top: -10px;
}

.spec-show-info {
  display: flex;
  flex-direction: column;
  height: 100%;
  flex-grow: 2;
  padding-left: 10px;
  box-sizing: border-box;
}

.spec-show-price {
  color: #ed3a3b;
  font-size: 30rpx;
  height: 40px;
  line-height: 40px;
}

.spec-show-specinfo {
  color: gainsboro;
  font-size: 24rpx;
}

.spec-show-close {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  box-sizing: border-box;
}

/* 中间规格尺码参数背景 */

.spec-show-content {
  width: 100%;
  height: 270px;
  padding: 10px;
  font-size: 26rpx;
  color: gray;
  box-sizing: border-box;
}

.spec-show-content-itembg {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.spec-show-content-itemtitle {
  height: 30px;
  line-height: 30px;
  font-size: 26rpx;
  color: gray;
}

.spec-show-content-item-normal{
  font-size: 24rpx;
  width: 60px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  margin: 0px 10px 10px 0px;
  border-width: 1px;
  border-color: gainsboro;
  border-style: solid;
  box-sizing: border-box;
  border-radius: 3px;
}

.spec-show-content-item-selected{
  font-size: 24rpx;
  width: 60px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  margin: 0px 10px 10px 0px;
  background: orange;
  color: white;
  border-width: 1px;
  border-color: orange;
  border-style: solid;
  box-sizing: border-box;
  border-radius: 3px;
}

.spec-show-content-numberbg {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}

.shopcar-add {
  display: flex;
  width: 200rpx;
  height: 60rpx;
  align-items: center;
  /* background:rgb(226, 222, 222); */
}

.number-icon {
  width: 30px;
  height: 30px;
}

.number-num {
  width: 30px;
  height: 23px;
  margin-top: 1px;
  line-height: 23px;
  text-align: center;
  border-bottom-width: 1px;
  border-bottom-color: rgb(233, 230, 230);
  border-bottom-style: solid;
  border-top-width: 1px;
  border-top-color: rgb(233, 230, 230);
  border-top-style: solid;
}

/* 确定按钮背景 */

.spec-show-enter-bg {
  width: 100%;
  height: 50px;
  background: white;
  padding: 5px 0px 5px 0px;
  box-sizing: border-box;
  position: fixed;
  bottom: 0px;
}

.spec-show-enter {
  height: 40px;
  background: #ed3a3b;
  color: white;
  font-size: 28rpx;
  border-radius: 0px;
}

/* 处理弹出规格尺码选择逻辑结束*/


/* 处理优惠信息逻辑开始*/
.promotion-title-bg{
  width: 100%;
  height: 40px;
  line-height: 40px;
  display: flex;
  font-size: 24rpx;
  background: white;
  justify-content: flex-start;
  align-items: center;
  padding-left: 10px;
  padding-right: 10px;
  color:#999999;
  box-sizing: border-box;
}
.promotion-title{
  width: 40px;
}


.sale{

  height: 15px;
  padding-left: 5px;
  padding-right: 5px;
  margin-right: 10px;
  color: white;
  font-size: 19rpx;
  border-radius: 2px;
  text-align: center;
}
.sale1{
  background-color:#ed3a3b;
}
.sale2{
  background-color: blue;
}
.sale3{
  background-color:orange;
}
/* 处理优惠信息逻辑结束*/



/* 可拼团列表开始*/

.groupon-info{
  margin-top: 10px;
  
   font-size: 24rpx;
  background: white;
}
.groupon-info-title{
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding-left: 10px;
  box-sizing: border-box;

}
.groupon-info-list{
  width: 100%;
  border-top-width: 1px;
  border-top-style: solid;
  border-top-color: gainsboro;
}
.groupon-info-list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  padding: 10px;
}
.groupon-info-list-item-left{
  display: flex;
  align-items: center;
}
.groupon-info-list-item-left-header{
  width: 40px;
  height: 40px;
  margin-right: 10px;
  border-radius: 20px;
  box-sizing: border-box;
}

.groupon-info-list-item-right{
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.groupon-info-list-item-time{
  color: #999999
}
.groupon-info-list-item-button{
  width: 70px;
  height: 36px;
  line-height: 36px;
  font-size: 24rpx;
  background: #ed4c50;
  color: white;
  border-radius: 0px;
  margin-left: 10px;
  box-sizing: border-box;
}

/* 可拼团列表结束*/


/* 拼团流程开始*/
.groupon-process{
  width: 100%;
  background: white;
  padding: 10px;
  margin-top: 10px;
  box-sizing: border-box;
}
.groupon-process-title{
  width: 100%;
  height: 20px;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  
}
.groupon-process-title-right{
  display: flex;
  height: 100%;
  align-items: center;
  color:#999999;
}
.groupon-process-title-right-icon{
  width: 30px;
  height: 30px;
  margin-right: -10px;
  box-sizing: border-box;
}
.groupon-process-flow-bg{
  width: 100%;
  display: flex;
  justify-content: center;
}
.groupon-process-image{
  width: 90%;

}


.customer-servie{
  width: 100%;
  height: 40px;
  display: flex;
  border-width: 1px;
  border-color: #ed3a3b;
  border-style: solid;
  border-radius: 3px;
  align-items: center;
  justify-content: center;
  margin-right: 20px;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #ed3a3b;
}

.customer-servie-icon{
  width: 30px;
  height: 30px;
}

/* 拼团流程评论开始*/



/* 评论开始*/
.comment-bg{
  width: 100%;
  /* height: 100px; */
  font-size: 24rpx;
  background:white;  
  color: gray;
  margin-top: 10px;
  padding: 5px 0px 5px 0px;
}

.comment-bg-title-info{
  width: 100%;
  display: flex;
  padding: 0px 10px 0px 10px;
  box-sizing: border-box;
  justify-content: space-between;
  border-bottom-width: 1px;
  border-bottom-color: gainsboro;
  border-bottom-style: solid;
}
.comment-bg-title-info-icon{
  margin-top: -8px;
}
.comment-percent{
  padding-left: 10px;
  color: orange;
}
.comment-count{
  padding-left: 20px;
}


.comment-bg-content{
  width: 100%;
  padding: 5px 10px 0px 10px;
  box-sizing: border-box;
}
.comment-bg-content-info{
  display: flex;
  justify-content: space-between;
}
.comment-bg-content-star{
  display: flex;
  width: 100%;
  height: 20px;
  flex-direction: row;
}
.comment-bg-content-star-icon{
  width: 15px;
  height: 15px;
}

/* 评论结束*/


.bottom-view-bg{
  display: flex;
  width: 100%;
  height: 44px;
  background: white;
  position: fixed;
  bottom: 0px;
  left: 0px;
  font-size: 28rpx;
  color: white;
}
button::after {
    border-radius: 0px;
}
.normal-price-button{
  display: block;
  width: 50%;
  height: 100%;
  line-height: 44px;
  text-align: center;
  background: #f67e81;
  border-radius: 0px;
  font-size: 28rpx;
  color: white;
}
.normal-price-button-hover{
  background: #dd5e60;
}
.groupon-price-button{
  display: block;
  border-radius: 0px;
  width: 50%;
  height: 100%;
  line-height: 44px;
  text-align: center;
  font-size: 28rpx;
  color: white;
  background: linear-gradient(to right, #ed4c50, #f67e81);
}

.groupon-price-button-hover{
  background: #aa3335;
}
